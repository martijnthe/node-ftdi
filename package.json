{
  "name": "ftdi",
  "version": "1.2.1",
  "description": "FTDI bindings for Node.js",
  "main": "index.js",
  "dependencies": {
    "bindings": "^1.2.1",
    "nan": "^2.4.0"
  },
  "gypfile": true,
  "scripts": {
